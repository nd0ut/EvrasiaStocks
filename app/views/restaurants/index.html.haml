.row
  .small.large.columns
    = render 'partials/search'

%ul.small-block-grid-1.large-block-grid-3#restaurants
  - @restaurants.each do |r|
    %li.restaurant
      .alert-box.secondary
        %h5
          = link_to restaurant_path(r) do
            %span.street=r.street

        %h6.subheader
          %b Город:
          = r.city.name

        -unless r.metro.empty?
          %h6.subheader
            %b Метро:
            = r.metro

        %h6.subheader
          %b Телефон:
          = r.phone

        %h6.subheader
          %b Время работы:
          = r.business_hours