.panel
  .row
    .small.large.columns
      %h3= link_to @stock.title, @stock.originalLink

  .row
    .small.large-4.columns
      = image_tag @stock.image_url, :class => 'th'
      %br
      %br
    .small.large-8.columns
      %p= @stock.description.html_safe

  .row
    .small.large-3.columns
      %h3 Рестораны
    .small.large-9.columns
      = render 'partials/search'

  .row
    .small.large.columns
      %ul.small-block-grid-1.large-block-grid-2#restaurants
        - @stock.restaurants.each do |r|
          %li.restaurant
            .alert-box.secondary
              .row
                .small.large.columns
                  Улица:
                  =link_to restaurant_path(r) do
                    %span.street=r.street
              .row
                .small.large.columns
                  Время акции:
                  =r.stock_hours.find_by(stock_id: @stock.id).hours
